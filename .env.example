# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xpert_forex_db
DB_USER=xpert_user
DB_PASSWORD=your_secure_password_here
DB_DIALECT=postgres
DB_LOG=false

# API Configuration
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_VERSION=v1
API_TIMEOUT=30000
API_RATE_LIMIT=100

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h
SESSION_SECRET=your_session_secret_here

# Email Configuration
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password_here
MAIL_FROM=noreply@xpertforex.com
MAIL_FROM_NAME=Xpert Forex Trade Inc

# External Services
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Forex API Configuration (if applicable)
FOREX_API_KEY=your_forex_api_key_here
FOREX_API_BASE_URL=https://api.example-forex.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
SECURE_COOKIES=false

# Third-party Services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_2FA=false
